<UserControl x:Class="PointOfSale.Customization_Screens.CowpokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Customization_Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel>
        <TextBlock FontSize="40" HorizontalAlignment="Center">Customize the Cowpoke Chili</TextBlock>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Cheese}"/>
            <TextBlock FontSize="20" Text="Cheese"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding GreenOnions}"/>
            <TextBlock FontSize="20" Text="Green Onions"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding TortillaStrips}"/>
            <TextBlock FontSize="20" Text="Tortilla Strips"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding SourCream}"/>
            <TextBlock FontSize="20" Text="Sour Cream"/>
        </StackPanel>
    </StackPanel>
</UserControl>
